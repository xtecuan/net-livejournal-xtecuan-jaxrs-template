<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <description>${groupId} - ${artifactId}</description>
    <display-name>${artifactId}</display-name>
    <filter>
        <description>${package}.xtecuannet.framework.web.filters.CharacterEncodingFilter</description>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>${package}.xtecuannet.framework.web.filters.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/${artifactId}/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/index.jsf</welcome-file>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>Theme selected</description>
        <param-name>primefaces.THEME</param-name>
        <param-value>bluesky</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
</web-app>
